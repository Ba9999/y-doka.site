{
  "name": "eleventastic",
  "version": "1.0.0",
  "description": "A boilerplate for eleventy websites",
  "scripts": {
    "sassWatch": "sass --watch src/assets/styles:dist/assets/styles",
    "sassBuild": "sass src/assets/styles/main.scss:dist/assets/styles/main.css",
    "start": "npm-run-all dev --parallel sassWatch",
    "dev": "run-s clean eleventy:dev --print-label",
    "build": "run-s clean eleventy:prod --print-label",
    "eleventy:dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "eleventy:prod": "cross-env ELEVENTY_ENV=production eleventy",
    "clean": "del-cli dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/maxboeck/eleventastic"
  },
  "author": "Max BÃ¶ck",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.9.5",
    "babel-loader": "^8.1.0",
    "clean-css": "^4.2.3",
    "critical": "^1.3.9",
    "cssesc": "^3.0.0",
    "del-cli": "^3.0.0",
    "focus-trap": "^5.1.0",
    "focus-visible": "^5.1.0",
    "html-minifier": "^4.0.0",
    "luxon": "^1.23.0",
    "markdown-it": "^10.0.0",
    "memfs": "^3.1.2",
    "node-sass": "^4.13.1",
    "sass": "^1.26.12",
    "svg-sprite": "^1.5.0",
    "webpack": "^4.42.1"
  },
  "devDependencies": {
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "cross-env": "^7.0.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
