---
layout: base
---
<article class="article">
  {% if cover %}
    {% if cover.picture %}
    <picture>
      {% if cover.picture.mobile %}
      <source srcset="{{ cover.picture.mobile }}" media="(max-width: 425px)">
      {% endif%}
      <img src="{{ cover.picture.desktop }}" width="900" height="537" class="article__cover-image" alt="{{ cover.picture.alt }}">
    </picture>
    {% endif%}
  {% endif%}
  <div class="article__title">
    <h1>{{ title }}</h1>
    <a href="https://github.com/Y-Doka/y-doka.site/blob/master/{{ page.inputPath }}" class="article__title-edit" target="_blank" title="Редактировать на Github.com">&#9998;</a>
    <span class="article__section">{{ section }}</span>
  </div>

  {{ content | safe }}

  <!-- issue 335 -->
  {#
    {% if contributors | length > 1 %}
      <div class="article__contributors">
        {% include 'contributors/contributors-list.njk' %}
      </div>
    {% endif%}
    {% if contributors | length == 1 %}
      <div class="article__contributors">
        {% include 'contributors/contributors.njk' %}
      </div>
    {% endif%}
  #}
  <!-- end -->
  {% include 'feedback-form.njk' %}
</article>
